<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/batch
		http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<import resource="appconfig-data.xml" />
	<import resource="appconfig-mvc.xml" />
	<import resource="appconfig-security.xml" />
	<import resource="appconfig-batch.xml" />
	<bean id="appUser" class="fpt.dir.sampleweb.model.AppUser" scope="prototype" />

	<batch:job id="autoRegister">
	  <batch:step id="step16">
		<batch:tasklet>
			<batch:chunk reader="cvsFileItemReader" writer="importAppUser" chunk-completion-policy="completionPolicy">
			</batch:chunk>
		</batch:tasklet>
	  </batch:step>
	</batch:job>
 <bean id="completionPolicy" class="org.springframework.batch.repeat.policy.DefaultResultCompletionPolicy"/> 
	<bean id="cvsFileItemReader" class="org.springframework.batch.item.file.FlatFileItemReader">

		<property name="resource" value="file:///D:/Work/workspace_news/SampleWebApplication/src/main/resources/batchAppUserdata.csv" />

		<property name="lineMapper">
		    <bean class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
			<property name="lineTokenizer">
				<bean
					class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
					<property name="names" value="username,password,email" />
				</bean>
			</property>

			<property name="fieldSetMapper">
				<bean class="fpt.dir.sampleweb.main.ReportFieldSetMapper" />
			
			</property>

		    </bean>
		</property>
	</bean>
	
  <bean id="importAppUser"
	class="fpt.dir.sampleweb.batch.ImportAppUser">
  </bean>
</beans>